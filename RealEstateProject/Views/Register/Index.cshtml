@using DTO.DTOs.UserDTOs;
@model ResultUserDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - A Pen by Mohithpoojary</title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/all.css'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css'>
    <link rel="stylesheet" href="~/CodePen_Export_QWgrPvp/dist/style.css">
</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="container">
        <div class="screen">
            <div class="screen__content">
                <form class="login" method="POST">
                    <div class="login__field">
                        <i class="login__icon fas fa-user"></i>
                        <input type="text"  class="login__input"  placeholder="Adınız" name="Name" />
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="text"  class="login__input"  placeholder="Soyadınız" name="Surname">

                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="text" class="login__input" placeholder="Kullanıcı Adınız" name="UserName">

                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="email" class="login__input" placeholder="Email Adresiniz" name="Email">

                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="text" class="login__input" placeholder="Telefon Numaranız" name="Phone">>

                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="password" class="login__input" placeholder="Şifreniz" name="Password">>>

                    </div>
                    <h4 style="color:red">@ViewBag.mesaj</h4>
                    <div class="p-t-30">
                        <button class="btn btn--radius btn--green" type="submit">Kayıt Ol</button>
                    </div>
                    <br />
                    <p class="w3l-register-p">Hesabın Var Mı ?<a style="color: #00BCD4; text-decoration: none;" href="/Login/Index/" class="register"> Giriş Yap</a></p>
                </form>
            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>
    </div>
    <!-- partial -->

</body>
</html>
